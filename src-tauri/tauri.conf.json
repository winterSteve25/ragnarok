{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "ragnarok",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "fs": {
        "readDir": true,
        "readFile": true,
        "createDir": true,
        "writeFile": true,
        "exists": true,
        "scope": [
          "$APPCONFIG",
          "$APPCONFIG/**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.github.wintersteve25.ragnarok",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Ragnarok",
        "width": 800,
        "height": 600,
        "visible": true
      },
      {
        "width": 400,
        "height": 200,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "center": true,
        "resizable": false,
        "hiddenTitle": true,
        "decorations": false,
        "visible": false
      }
    ]
  }
}
